<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.reportcard">

    <application
        android:allowBackup="true"
        android:icon="@drawable/reportcard"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.FirstStudentActivity"
            android:label="@string/pupilfirst"/>
        <activity android:name=".activities.SecondStudentActivity"
            android:label="@string/pupilsecond"/>
        <activity android:name=".activities.ThirdStudentActivity"
            android:label="@string/pupilthird"/>
        <activity android:name=".activities.FourthStudentActivity"
            android:label="@string/pupilfourth"></activity>
    </application>

</manifest>